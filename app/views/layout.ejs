  <div class="container">
    <%- body %>
  </div>
  <script>
    
    const form = document.getElementById("formEdit");
    var title = document.getElementById("title");
    var body = document.getElementById("body");
    var titleN = document.getElementById("title-card");
    var bodyN = document.getElementById("body-card");
    var idinput = document.getElementById("idinput");
    form.style.display = "none"

    function myClick(id){
     
      console.log(id);
      form.style.display = "inline";
      title.value = titleN.textContent;
      body.value = bodyN.textContent;
      idinput.value = id;
     
    }

  </script>
  
